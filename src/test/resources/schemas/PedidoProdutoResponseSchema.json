{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "http://example.com/example.json",
    "type": "array",
    "items": {
        "type": "object",
        "required": [
            "produto",
            "quantidade"
        ],
        "properties": {
            "produto": {
                "type": "object",
                "required": [
                    "id",
                    "nome",
                    "categoria",
                    "valor",
                    "descricao",
                    "imagens"
                ],
                "properties": {
                    "id": {
                        "type": [ "number", "null" ]
                    },
                    "nome": {
                        "type": [ "string", "null" ]
                    },
                    "categoria": {
                        "type": [ "number", "null" ]
                    },
                    "valor": {
                        "type": [ "number", "null" ]
                    },
                    "descricao": {
                        "type": [ "string", "null" ]
                    },
                    "imagens": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": [
                                "path"
                            ],
                            "properties": {
                                "path": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            },
            "quantidade": {
                "type": [ "number", "null" ]
            }
        }
    }
}